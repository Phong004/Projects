<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1"
    metadata-complete="false">

    <!-- ========== (các servlet cũ) ========== -->
    <servlet>
        <servlet-name>getBookingController</servlet-name>
        <servlet-class>controller.getBookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>checkInController</servlet-name>
        <servlet-class>controller.checkInController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getBookingController</servlet-name>
        <url-pattern>/getBookingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>checkInController</servlet-name>
        <url-pattern>/checkInController</url-pattern>
    </servlet-mapping>

    <!-- ========== Filter JWT (khai báo bằng web.xml) ========== -->
    <!-- Tạm thời comment để app có thể chạy - cần tạo filter.JwtAuthFilter nếu cần secure API -->
    <!--
    <filter>
        <filter-name>JwtAuthFilter</filter-name>
        <filter-class>filter.JwtAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JwtAuthFilter</filter-name>
        <url-pattern>/api/secure/*</url-pattern>
    </filter-mapping>
    -->

    <!-- ========== Các servlet /api/secure/* ========== -->
    <servlet>
        <servlet-name>MyPackageHistoryController</servlet-name>
        <servlet-class>controller.MyPackageHistoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyPackageHistoryController</servlet-name>
        <url-pattern>/api/secure/my-package-history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdatePackageController</servlet-name>
        <servlet-class>controller.UpdatePackageController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePackageController</servlet-name>
        <url-pattern>/api/secure/updatePackage</url-pattern>
    </servlet-mapping>

    <!-- ========== (MỚI) RemoveBatteryController ========== -->
    <servlet>
        <servlet-name>RemoveBatteryController</servlet-name>
        <servlet-class>controller.RemoveBatteryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveBatteryController</servlet-name>
        <url-pattern>/api/secure/removeBattery</url-pattern>
    </servlet-mapping>

    <!-- ========== Session & Welcome ========== -->
    

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    

</web-app>
